{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "lib": [
            "ES2022"
        ],
        "moduleResolution": "Node16",
        "rootDir": ".",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ]
}