{
    "name": "mcp-api-gateway",
    "version": "1.0.0",
    "description": "API Gateway for MCP servers - Ultra-simplified",
    "main": "dist/index-simple.js",
    "type": "module",
    "scripts": {
        "dev": "node --loader ts-node/esm/transpile-only src/index-simple.ts",
        "dev:watch": "nodemon --exec node --loader ts-node/esm/transpile-only src/index-simple.ts",
        "build": "tsc",
        "start": "node dist/index-simple.js"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/node": "^20.10.6",
        "@types/uuid": "^9.0.7",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "nodemon": "^3.0.2"
    }
}